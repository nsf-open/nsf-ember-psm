
<h3 class="margin-btm-0">Select Submission Type</h3>

<div class="panel-body">
  <p class="bold">
    What would you like to prepare?
  </p>
  <ul class="response-radio">
    {{#each submissionTypes as |option|}}
      <li class="{{option.disabledClass}} proposal-type" title="{{option.title}}">
        {{#radio-button groupValue=wizard.submissionType disabled=option.disabled value=option.code changed="setSubmissionType"}}{{option.description}}{{/radio-button}}
      </li>
    {{/each}}
  </ul>
</div>

<div class="panel-footer">
  <div class="right">
    <button data-test-previous-button class="btn btn-default" {{action 'previous'}}>Previous</button>
    <button data-test-next-button class="btn btn-primary" title={{nextDisabledTitle}} disabled={{nextDisabled}} {{action 'next'}}>Next</button>
  </div>
</div>

{{yield}}
