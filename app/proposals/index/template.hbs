
<div class="panel-body">
  {{screen-messages-service}}

  {{#if (eq model.proposalsType 'inprogress')}}
    {{proposal-list proposals=model.proposals proposalsType=model.proposalsType}}
  {{/if}}

  {{#if (eq model.proposalsType 'submitted')}}
    {{proposal-list proposals=model.proposals proposalsType=model.proposalsType createRevision=(action 'createRevision')}}
  {{/if}}

  {{#if currentlyLoading}}
      <div id="loadingOverlay" class="overlay">
          <div class="overlay-content">
              <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
              <span class="sr-only">Loading...</span>
          </div>
      </div>
  {{/if}}

</div>
